<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genres</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
       <tr>
        <td><%= movie.name %></td>
        <td>
          <%movie.genre_movie_serial.all.each do |g| %>  
            <%=g.genre.name %> <br/>
          <% end %>
        </td>
        <td><%= link_to 'Show', movie, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-info"  %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
